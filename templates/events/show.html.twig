{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}

<div class="app-content">
        <div class="side-app">
            <div class="page-header">
                <h4 class="page-title">Data Tables</h4>
                
            </div>



            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tables des reservations</div>
                        </div>
                        <div class="card-body">
                        <div class="table-responsive">

                                <table id="dataTable" class="table table-striped table-bordered" >

    <h1>Events</h1>

        <tbody>
            <tr>
                <th>IdEvent</th>
                <td>{{ event.idEvent }}</td>
            </tr>
            <tr>
                <th>NameEve</th>
                <td>{{ event.nameEve }}</td>
            </tr>
            <tr>
                <th>DateEve</th>
                <td>{{ event.dateEve ? event.dateEve |date('H:i') }}</td>
            </tr>
            <tr>
                <th>DescriptionEve</th>
                <td>{{ event.descriptionEve }}</td>
            </tr>
            <tr>
                <th>PhotoEve</th>
                <td> <img src="{{ asset('uploads/' ~ event.photoEve ) }}" ></td>
            </tr>
            <tr>
                <th>IdMember</th>
                <td>{{ event.idMember }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('events_index') }}">back to list</a>

    <a href="{{ path('events_edit', {'idEvent': event.idEvent}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}


 </div>

                        </div>

                        <!-- table-wrapper -->
                    </div>
                    <!-- section-wrapper -->
                </div>

            </div>
        </div>
    </div>
{% endblock %}
