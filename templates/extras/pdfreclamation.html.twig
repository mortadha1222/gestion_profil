<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;

        }

        table.center {
            margin-left: auto;
            margin-right: auto;
        }
        #footer {
            position: fixed;
            width: 100%;
            bottom: 0;
            left: 0;
            right: 0;
        }

        #footer p {
            border-top: 2px solid #555555;
            margin-top:10px;
        }
    </style>
</head>
<h1> Reclamation List </h1>


<div class="table-responsive">

    <table class="center" >
        <thead>
        <tr>

            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Answer</th>
            <th>IdUser</th>
            <th>Date</th>

        </tr>
        </thead>
        {% for reclamation in reclamation %}

            <tr>

                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.title }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.answer }}</td>
                <td>{{ reclamation.idUser }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>

            </tr>

        {% endfor %}




        </tbody>

    </table>

</div>

</div>
