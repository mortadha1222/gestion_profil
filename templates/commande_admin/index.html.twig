{% extends 'base.html.twig' %}
{% block title %}Commande test{% endblock %}

{% block body %}
    <h1>Order </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ref</th>


                <th>AdresseLivraison</th>
                <th>Total</th>
             <!--   <th>IdUser</th>
                <th>IdVendor</th>
                <th>actions</th> -->
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idCommande }}</td>

                <td>{{ commande.adresseLivraison }}</td>
                <td>{{ commande.total }} TND</td>

                <td>
                      <a href="{{ path('commande_admin_show', {'idCommande': commande.idCommande}) }}">Display</a>
                </td>
                <td>
                    {{ include('commande_admin/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
